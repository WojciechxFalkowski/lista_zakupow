<%- include('layout.ejs'); %>

    <div class="container mt-4">
        <h2 class="mb-3">Lista Zakupów</h2>

        <!-- Formularz dodawania nowego produktu -->
        <form method="post" action="/add-product" class="mb-3">
            <div class="input-group mb-3">
                <input type="text" name="name" class="form-control" placeholder="Nazwa Produktu" required>
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Dodaj Produkt</button>
                </div>
            </div>
        </form>

        <!-- Lista produktów -->
        <ul class="list-group">
            <% products.forEach(function(product) { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <form method="post" action="/toggle-purchase/<%= product._id %>" class="form-inline">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" name="purchased" class="custom-control-input"
                                id="check-<%= product._id %>" <%=product.purchased ? 'checked' : '' %>
                            onchange="this.form.submit()">
                            <label class="custom-control-label" for="check-<%= product._id %>">
                                <%= product.name %>
                            </label>
                        </div>
                    </form>
                    <form method="post" action="/delete-product/<%= product._id %>" class="form-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Usuń</button>
                    </form>
                </li>
                <% }); %>
        </ul>
    </div>
    </body>

    </html>